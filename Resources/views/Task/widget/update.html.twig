{% if saved is defined and saved %}
    {% set widgetResponse = {
        widget: {
            message: 'oro.task.controller.task.saved.message'|trans,
            triggerSuccess: true,
            remove: true
        }
    }%}

    {{ widgetResponse|json_encode|raw }}
{% else %}
    <div class="widget-content">
        {% if not form.vars.valid and form.vars.errors|length %}
            <div class="alert alert-error" role="alert">
                <div class="message">
                    {{ form_errors(form) }}
                </div>
            </div>
        {% endif %}
        <div class="form-container">
            <form id="{{ form.vars.id }}" name="{{ form.vars.name }}" action="{{ formAction }}" method="post">
                <fieldset class="form form-horizontal">
                    <div class="span6">
                        {{ form_row(form.subject) }}
                        {{ form_row(form.description) }}
                    </div>
                    <div class="span6">
                        {{ form_row(form.dueDate) }}
                        {{ form_row(form.taskPriority) }}
                        {% if form.owner is defined %}
                            {{ form_row(form.owner) }}
                        {% endif %}
                    </div>
                    <div class="span6">
                        {{ form_rest(form) }}
                    </div>
                    <div class="widget-actions form-actions">
                        <button class="btn" type="reset">{{ 'Cancel'|trans }}</button>
                        {% if form.vars.value.id %}
                        <button class="btn btn-primary" type="submit">
                            {{ 'oro.ui.update_entity'|trans({'%entityName%': 'oro.task.entity_label'|trans}) }}
                        </button>
                        {% else %}
                        <button class="btn btn-primary" type="submit">
                            {{ 'oro.ui.create_entity'|trans({'%entityName%': 'oro.task.entity_label'|trans}) }}
                        </button>
                        {% endif %}
                    </div>
                </fieldset>
            </form>
            {{ oro_form_js_validation(form) }}
        </div>
    </div>
{% endif %}
